.footer
  padding 70px 50px
  width 1366px
  height 373px
  color #a1a0a0
  display flex
  flex-direction row
  justify-content flex-start

.footerColl
  width 30%
  display flex
  flex-direction column
  justify-content flex-start

.footerColl__phone
  margin-top 40px

.footerColl__address
  margin-top 20px

.footerColl__email
  margin 20px 0
  line-height 1.3

.footerColl__socialsText
  margin-top 50px

.footerColl__socialsIcons
  margin-top 20px
  border-bottom 1px solid #ffffff
  padding-bottom 5px

.footerColl__socialsIcons img
  cursor pointer
  width 35px
  margin 20px 10px
  color #ababab

.footerColl__socialsIcons img:hover
  transform: translateY(-3px);
  transition 1s

.footerColl__socialsCopyright
  margin-top 20px