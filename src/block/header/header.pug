// Logo
-textLogo = 'Международный институт <br> моды и дизайна'
-imgLogo = '../img/ic-logo.svg'
-linkLogo = 'index.html'
-classesLogo = "_header"

// Btn
-textBtnHeader = 'Online регистрация'

mixin b-header
	+b.header
		+b.row_1
			+e.item_1
				+b-logo(textLogo, imgLogo, linkLogo, classesLogo)
				+b-search
			+e.item_2
				+b-nav(itemsNavFirst, classesNavFirst)
				+b-nav(itemsNavSecond, classesNavSecond)
				+b.toggler(class=classesNavFirst)
					+e.line
					+e.line
					+e.line
		+b.row_2
			+e.item_1
				+b.H1.header__title Откройте для себя <br> Институт моды и дизайна
				+b-button(textBtnHeader)